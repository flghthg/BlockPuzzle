<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectLevel"
    android:orientation="vertical"
    android:background="@drawable/selectlevel_bg">

    <!-- 글자를 넣자 selectlevel 참고 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It's BLOCK PUZZLE TIME!"
            android:textStyle="bold"
            android:fontFamily="@font/neodgm"
            android:textSize="30dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginTop="150dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you ready?"
            android:fontFamily="@font/neodgm"
            android:textSize="30dp"
            android:textColor="#BD5252"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="▷Select Play Level◁"
            android:fontFamily="@font/neodgm"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/easy_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EASY"
        android:background="@drawable/easy_btn"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textSize="23dp"
        android:paddingTop="5dp"
        android:fontFamily="@font/neodgm" />

    <Button
        android:id="@+id/normal_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NORMAL"
        android:background="@drawable/normal_btn"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textSize="23dp"
        android:paddingTop="5dp"
        android:fontFamily="@font/neodgm" />

    <Button
        android:id="@+id/hard_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HARD"
        android:background="@drawable/hard_btn"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textSize="23dp"
        android:paddingTop="5dp"
        android:fontFamily="@font/neodgm" />

</LinearLayout>