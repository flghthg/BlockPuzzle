<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectPageActivity"
    android:orientation="vertical"
    android:background="#000">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/sound_icon"
        android:id="@+id/icon_sound"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:src="@drawable/gametitle_only"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="20dp">

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button0"
            android:text="Game Start"
            android:gravity="center"
            android:textColor="#fff"
            android:fontFamily="@font/neodgm"
            android:paddingTop="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/btn_start" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button2"
            android:text="Tutorial"
            android:textColor="#fff"
            android:gravity="center"
            android:fontFamily="@font/neodgm"
            android:paddingTop="5dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/btn_tuto" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button3"
            android:text="Rank"
            android:gravity="center"
            android:textColor="#fff"
            android:fontFamily="@font/neodgm"
            android:paddingTop="5dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/btn_rank" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button4"
            android:text="Shop"
            android:textColor="#fff"
            android:gravity="center"
            android:fontFamily="@font/neodgm"
            android:paddingTop="5dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/btn_shop" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button5"
            android:text="Finish"
            android:gravity="center"
            android:textColor="#fff"
            android:fontFamily="@font/neodgm"
            android:paddingTop="5dp"
            android:id="@+id/btn_finish" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:text="Copyright Â® Team 2 All rights reserved."
        android:textStyle="bold"
        android:fontFamily="@font/neodgm"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>