<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryActivity"
    android:orientation="vertical"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I"
            android:textColor="#FFEB3B"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/maplebold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"
            android:textColor="#1BFAE7"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/maplebold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v"
            android:textColor="#FFEB3B"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/maplebold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e"
            android:textColor="#1DF440"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/maplebold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n"
            android:textColor="#E81D0E"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/maplebold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="t"
            android:textColor="#FF9800"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/maplebold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:textColor="#3956F8"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/maplebold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r"
            android:textColor="#FFEB3B"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/maplebold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="y"
            android:textColor="#0EF13F"
            android:textSize="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/maplebold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backinven"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/theme_1"
                android:background="@drawable/theme_btn"

                />
            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:id="@+id/item_1"
                android:background="@drawable/item_btn"

                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/character_1"
                android:background="@drawable/character_btn"

                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="299dp"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:id="@+id/frame"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="1"
        >

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#fff"
            android:fontFamily="@font/neodgm"
            android:paddingTop="3dp"
            android:background="#575353"
            android:id="@+id/back_shop"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</LinearLayout>